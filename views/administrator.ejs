<!DOCTYPE html>
<html lang="en">
	<head>
    
    	<% include ./head %>


	</head>

	<body class="body full-body" ng-app="airBnB" ng-cloak ng-controller="adminPageController" ng-init="init('<%= data %>')">

	<div class="container">
		

		<div class="row" style="background-color: #FF5A5F; padding:5px 10px 15px 10px; border-bottom:1px solid white;">
			<div class="col-xs-1" style="padding: 0px 0px 0px 0px;">
				<div style="display: inline-block; padding-left: 10px; padding-top:5px;"><img src="images/airbnb_logo_detail.png" style="" height="40" width="40" alt="">
				</div>
				<div style="font-size:20px; padding-left:5px; display: inline-block; color: white;">admin</div>
			</div>
			<div class="col-xs-2 text-left" style="padding-top:5px;">
			</div>
			<div class="col-xs-3">
				
			</div>
			<div class="col-xs-3">
				
			</div>
			<div class="col-xs-3 text-right">
				<div><a href = "" style="font-size:24px; padding-left:10px; padding-top:20px;color: white;" ng-click = "logoutAdmin()">Logout</a></div>
			</div>
		</div>
		
	</div>
	<div class="container">

		<div class="row" style="background-color: #FF5A5F; padding:5px 5px 5px 5px;margin-bottom:40px;border-bottom-left-radius:4px;border-bottom-right-radius:4px;" class="text-center">
				<div class="col-xs-3 text-center" class="text-justify" style="border-right:1px solid black; border-color: #FFFFFF;">
					<div class="admin-head-list" ng-click="getTopTen();">Top 10 Properties in 365 days before today</div>
				</div>
				<div class="col-xs-3 text-center" class="text-justify" style="border-right:1px solid black; border-color: #FFFFFF;">
					<div class="admin-head-list">City Wise Revenue in 365 days before today</div>
				</div>
				<div class="col-xs-3 text-center" class="text-justify" style="border-right:1px solid black; border-color: #FFFFFF;">
					<div class="admin-head-list">Top 10 Sellers (Sales in last 30 days)</div>
				</div>
			<div class="col-xs-3 text-center" class="text-justify" style="border-right:0px solid black; border-color: #FFFFFF;">
				<div><a href="" class="admin-head-list" ng-click="getPendingApprovals();">Pending Host Approvals</a></div>
			</div>

			
		</div>
		
	</div>
		
		<div class="container" ng-show="showPendingApprovals" style="">

			<div ng-repeat="user in users">
				<div class="row">
					<div class="col-xs-3"></div>
					<div class="col-xs-6">
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">Host Approval</span>
							</div>
							<div class="panel-body">
								<div class="row">
									<div class="col-xs-3"></div>
									<div class="col-xs-3"><span style="margin-bottom:25px;font-size:20px;">{{user.f_name}} {{user.l_name}}</span></div>
									<div class="col-xs-3">
										<div class="btn btn-success" style="font-weight:bold;" ng-click="approveHost(user.user_id);">Approve Host</div>
									</div>
									<div class="col-xs-3"></div>
								</div>
							</div>
						</div>
					</div>
					<div class="col-xs-3"></div>
				
				</div>
				
			</div>
			
		</div>


		<div ng-hide="showPendingApprovals" ng-controller="parentController" ng-init="init('<%= data %>')">

			<div class="container" style="margin-bottom: 0px;">
	
				<div class="row" style="margin-bottom: 0px;">
					
					<div class="col-xs-8" >
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">Top 10 properties in a year</span>
							</div>
							<div class="panel-body">
								<div class="row" ng-controller="adminBarController"  ng-init="init('<%= data %>')">
									
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
							</div>
						</div>					
					</div>
					
					<div class="col-xs-4">
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">Top 10 properties: Sale Weightage</span>
							</div>
							<div class="panel-body">
								<div class="row" ng-controller="adminPieController">
									
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
								
							</div>
						</div>
					</div>
					
				</div>


				<div class="row" style="margin-bottom: 0px;">
					
					<div class="col-xs-8" >
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">City wise revenue in a year</span>
							</div>
							<div class="panel-body">
								<div class="row" ng-controller="cityWiseBarController" ng-init="init('<%= data %>')">
									
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
							</div>
						</div>					
					</div>
					
					<div class="col-xs-4">
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">City wise revenue: Sale Weightage</span>
							</div>
							<div class="panel-body">
								<div class="row" ng-controller="cityWisePieController">
									
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
								
							</div>
						</div>
					</div>
					
				</div>


				<div class="row" style="margin-bottom: 0px;">
					
					<div class="col-xs-8" >
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">Top Sellers in 30 days</span>
							</div>
							<div class="panel-body">
								<div class="row" ng-controller="TopTenMonthBarController" ng-init="init('<%= data %>')">
									
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
							</div>
						</div>					
					</div>
					
					<div class="col-xs-4">
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">Top Sellers in 30 days: Sale Weightage</span>
							</div>
							<div class="panel-body">
								<div class="row" ng-controller="TopTenMonthPieController">
									
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
								
							</div>
						</div>
					</div>
					
				</div>
	
	
				<div class="row">
						
					<div class="col-xs-6">
						
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">Hosts: Top 10 Downs - Top 10 Ups</span>
							</div>
							<div class="panel-body">
								
								<div class="row" ng-controller="horizontalMultibarController">
							
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
	
							</div>
						</div>
	
					</div>
	
					<div class="col-xs-6">
						
						<div class="panel panel-default admin-list">
							<div class="panel-heading">
								<span style="font-size:20px; font-color: #2A3F54;">Number Of Properties Sold vs Revenue</span>
							</div>
							<div class="panel-body">
								
								<div class="row" ng-controller="donutChartController">
							
									<nvd3 options="options" data="data"></nvd3>
	
								</div>
	
							</div>
						</div>
	
					</div>
				</div>
	
				<div class="row" style="margin-top:0px;">
	
	
					<div class="panel panel-default admin-list">
						<div class="panel-heading">
							<span style="font-size:20px; font-color: #2A3F54;">Number Of Properties Sold vs Revenue</span>
						</div>
						<div class="panel-body">
							
							<div class="row" ng-controller="lineBarController">
						
								<nvd3 options="options" data="data" class="with-3d-shadow with-transitions"></nvd3>
	
							</div>
	
						</div>
					</div>
		
					<div class="panel panel-default admin-list">
						<div class="panel-heading">
							<span style="font-size:20px; font-color: #2A3F54;">Total Sales</span>
						</div>
						<div class="panel-body">
							
							<div class="row" ng-controller="adminSunController">
								
								<nvd3 options="options" data="data" class="with-3d-shadow with-transitions"></nvd3>
	
							</div>
	
						</div>
					</div>
					
				</div>		
	
			</div>
			
		</div>
	
	</body>

</html>